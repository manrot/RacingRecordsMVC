@model RacingRecordsMVC.Models.EjecucionCarrera

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>¿Seguro que quiere eliminar al competidor de la carrera?</h3>
<div>
    <h4>Competidor en carrera</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Minutos)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Minutos)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Segundos)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Segundos)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroCompetidor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumeroCompetidor)
        </dd>
        <dt class = "col-sm-2">
           Nombre del competidor
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdCompetidorNavigation.NombreCompleto)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdCompetencia" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Regresar</a>
    </form>
</div>
