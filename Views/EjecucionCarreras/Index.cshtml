@model IEnumerable<RacingRecordsMVC.Models.EjecucionCarrera>

@{
    ViewData["Title"] = "Index";
}

<h1>Administrador de carreras</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Agregar competidor</a>
</p>
<table class="table table-primary">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Minutos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Segundos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroCompetidor)
            </th>
            <th>
                Nombre del competidor
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Minutos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Segundos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroCompetidor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCompetidorNavigation.NombreCompleto)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdCompetencia">Editar</a> |
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.IdCompetencia">Ver</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdCompetencia">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
